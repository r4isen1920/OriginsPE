{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "r4isen1920_originspe:vine_bind",

      "is_summonable": true,

      "properties": {

        "r4isen1920_originspe:length": {
          //* The length of the vine
          "client_sync": true,
          "type": "int",
          "default": 0,
          "range": [ 0, 32 ]
        },

        "r4isen1920_originspe:state": {
          //* The current state of the vine
          "client_sync": true,
          "type": "enum",
          "default": "staying",
          "values": [ "in", "staying", "out" ]
        }

      }
    },

    "component_groups": {
      "r4isen1920_originspe:instant_despawn": {
        "minecraft:instant_despawn": {}
      },

      "r4isen1920_originspe:on_spawn": {
        "minecraft:timer": {
          "time": 0.2,
          "looping": false,
          "time_down_event": {
            "event": "r4isen1920_originspe:spawned",
            "target": "self"
          }
        }
      },

      "r4isen1920_originspe:spawned": {
        "minecraft:timer": {
          "time": 2.1, //? Max duration of the vine + buffer
          "looping": false,
          "time_down_event": {
            "event": "r4isen1920_originspe:instant_despawn.final",
            "target": "self"
          }
        }
      },

      "r4isen1920_originspe:despawning": {
        "minecraft:timer": {
          "time": 0.2,
          "looping": false,
          "time_down_event": {
            "event": "r4isen1920_originspe:instant_despawn.final",
            "target": "self"
          }
        }
      }
    },

    "components": {
      "minecraft:is_hidden_when_invisible": {},
      "minecraft:health": {
        "min": 1,
        "max": 1,
        "value": 1
      },
      "minecraft:type_family": {
        "family": [ "vine_bind", "origins", "inanimate" ]
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "all",
          "deals_damage": "no"
        }
      },
      "minecraft:collision_box": {
        "width": 0.0,
        "height": 0.0
      },
      "minecraft:physics": {
        "has_gravity": false,
        "has_collision": false
      },
      "minecraft:nameable": {
        "always_show": false,
        "allow_name_tag_renaming": false
      }
    },

    "events": {

      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "r4isen1920_originspe:on_spawn"
          ]
        },
        "set_property": {
          "r4isen1920_originspe:state": "in"
        }
      },
      "r4isen1920_originspe:spawned": {
        "add": {
          "component_groups": [
            "r4isen1920_originspe:spawned"
          ]
        },
        "remove": {
          "component_groups": [
            "r4isen1920_originspe:on_spawn"
          ]
        },
        "set_property": {
          "r4isen1920_originspe:state": "staying"
        }
      },


      "r4isen1920_originspe:instant_despawn": {
        "set_property": {
          "r4isen1920_originspe:state": "out"
        },
        "add": {
          "component_groups": [
            "r4isen1920_originspe:despawning"
          ]
        }
      },
      "r4isen1920_originspe:instant_despawn.final": {
        "add": {
          "component_groups": [
            "r4isen1920_originspe:instant_despawn"
          ]
        }
      }

    }
  }
}
